# StudyGuru Pro - Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================
# Server Configuration
# ============================================
ENVIRONMENT=production
PORT=8000
APP_NAME=Study Guru - Pro

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/studyguru
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
ENABLE_RATE_LIMITING=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_GRAPHQL=60
RATE_LIMIT_GRAPHQL_WINDOW=60
RATE_LIMIT_STREAMING=30
RATE_LIMIT_STREAMING_WINDOW=60
RATE_LIMIT_AUTH=10
RATE_LIMIT_AUTH_WINDOW=60
RATE_LIMIT_WEBHOOK=1000
RATE_LIMIT_WEBHOOK_WINDOW=60

# ============================================
# Caching Configuration
# ============================================
ENABLE_MODEL_CACHING=true
ENABLE_CONTEXT_CACHING=true
CACHE_TTL=3600
CACHE_MAX_SIZE=5000

# ============================================
# Background Tasks
# ============================================
MAX_CONCURRENT_BACKGROUND_TASKS=10
MAX_CONCURRENT_MESSAGE_TASKS=20
BACKGROUND_TASK_TIMEOUT=600
BACKGROUND_TASK_RETRY_DELAY=30
BACKGROUND_TASK_CLEANUP_HOURS=24

# ============================================
# AI Service Configuration
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLIENT_ID=your_google_client_id_here
MOONSHOT_API_KEY=your_moonshot_api_key_here

# ============================================
# Vector Database (Zilliz/Milvus)
# ============================================
ZILLIZ_URI=your_zilliz_uri_here
ZILLIZ_TOKEN=your_zilliz_token_here
ZILLIZ_DB_NAME=studyguru
ZILLIZ_COLLECTION=document_embeddings
ZILLIZ_DIMENSION=1536
ZILLIZ_INDEX_METRIC=IP
ZILLIZ_CONSISTENCY_LEVEL=Bounded

# ============================================
# AWS Configuration
# ============================================
AWS_ACCESS_KEY=your_aws_access_key_here
SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_ORIGIN=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# ============================================
# Security
# ============================================
SECRET_KEY=your_secret_key_here_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================
# Feature Flags
# ============================================
DISABLE_GUARDRAIL=false
ENABLE_LOGS=true
ENABLE_ENHANCED_PROCESSING=true

# ============================================
# Gunicorn Configuration (Optional)
# ============================================
GUNICORN_WORKERS=8
LOG_LEVEL=info

# ============================================
# Client Configuration
# ============================================
CLIENT_ORIGIN=https://yourdomain.com

